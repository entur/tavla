{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "Admin/*": ["./src/Admin/*"],
            "Board/*": ["./src/Board/*"],
            "components/*": ["./src/Shared/components/*"],
            "utils/*": ["src/utils/*"],
            "types/*": ["src/types/*"],
            "styles/*": ["./src/Shared/styles/*"],
            "assets/*": ["src/assets/*"],
            "hooks/*": ["src/hooks/*"],
            "src/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules", ".next/*"]
}
