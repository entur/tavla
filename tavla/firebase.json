{
    "emulators": {
        "auth": {
            "port": 9099
        },
        "firestore": {
            "port": 8080
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true,
        "storage": {
            "port": 9199
        }
    },
    "storage": {
        "rules": "storage.rules"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": "firebaseFunctions",
        "runtime": "nodejs22",
        "predeploy": "yarn workspace @utils/firebase-functions build",
        "region": "europe-west1",
        "isolate": true
    }
}
