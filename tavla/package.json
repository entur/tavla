{
    "name": "tavla",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "firebaseFunctions"
    ],
    "browserslist": [
        "defaults"
    ],
    "scripts": {
        "dev": "next dev --turbopack & firebase emulators:start --only auth,firestore,storage --project=ent-tavla-dev",
        "dev:persist": "next dev & yarn emulators",
        "emulators": "firebase emulators:start --only auth,firestore,storage --project=ent-tavla-dev --import=./.db --export-on-exit",
        "build": "next build",
        "build:prod": "NEXT_PUBLIC_ENV=prod next build",
        "typecheck": "tsc --noEmit --incremental false",
        "depcheck": "depcruise src",
        "start": "next start",
        "generate": "graphql-codegen",
        "lint": "next lint --max-warnings 0",
        "prettier": "prettier . --check",
        "fix": "next lint --fix && prettier . --write",
        "build-start": "next build && next start",
        "postinstall": "cd .. && husky install ./.husky",
        "prepare": "husky"
    },
    "lint-staged": {
        "**/*.{ts,tsx,js,jsx}": [
            "yarn eslint --max-warnings=0 --fix --no-warn-ignored"
        ],
        "**/*.{json,css,scss,md,yaml,yml}": [
            "yarn prettier --write"
        ]
    },
    "dependencies": {
        "@entur/alert": "0.17.18",
        "@entur/button": "4.0.2",
        "@entur/chip": "0.9.8",
        "@entur/dropdown": "8.0.0",
        "@entur/expand": "3.6.18",
        "@entur/form": "9.0.1",
        "@entur/icons": "8.2.0",
        "@entur/layout": "3.2.2",
        "@entur/loader": "0.5.35",
        "@entur/menu": "6.1.0",
        "@entur/modal": "1.7.78",
        "@entur/table": "4.10.0",
        "@entur/tokens": "3.20.0",
        "@entur/tooltip": "5.2.17",
        "@entur/typography": "2.0.3",
        "@firebase/database-types": "1.0.16",
        "@sentry/nextjs": "10.34.0",
        "@types/jsdom": "21.1.7",
        "dompurify": "3.3.0",
        "firebase": "12.6.0",
        "firebase-admin": "13.6.0",
        "firebase-functions": "7.0.1",
        "graphql": "16.12.0",
        "jsdom": "28.0.0",
        "lodash": "4.17.23",
        "nanoid": "5.1.6",
        "next": "16.1.6",
        "posthog-js": "1.335.2",
        "react": "19.2.4",
        "react-dom": "19.2.4",
        "swr": "2.3.6",
        "zod": "4.1.12"
    },
    "devDependencies": {
        "@eslint/eslintrc": "3.3.1",
        "@eslint/js": "10.0.1",
        "@graphql-codegen/cli": "6.1.1",
        "@graphql-codegen/import-types-preset": "3.0.1",
        "@graphql-codegen/typed-document-node": "6.1.5",
        "@graphql-codegen/typescript": "5.0.7",
        "@graphql-codegen/typescript-operations": "5.0.7",
        "@types/eslint-plugin-jsx-a11y": "6",
        "@types/lodash": "4.17.20",
        "@types/node": "25.2.1",
        "@types/react": "19.2.13",
        "@types/react-dom": "19.2.3",
        "@types/semver": "7.7.1",
        "@typescript-eslint/eslint-plugin": "8.46.4",
        "@typescript-eslint/parser": "8.46.4",
        "autoprefixer": "10.4.22",
        "dependency-cruiser": "17.3.7",
        "eslint": "10.0.0",
        "eslint-config-next": "16.1.6",
        "eslint-config-prettier": "10.1.8",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-react": "7.37.5",
        "firebase-tools": "15.5.1",
        "husky": "9.1.7",
        "lint-staged": "16.2.7",
        "postcss": "8.5.6",
        "prettier": "3.6.2",
        "prettier-plugin-organize-imports": "4.3.0",
        "prettier-plugin-tailwindcss": "0.7.1",
        "tailwindcss": "4.1.18",
        "typescript": "5.9.3"
    },
    "packageManager": "yarn@4.10.3",
    "engines": {
        "node": "20.20.0"
    },
    "resolutions": {
        "ip": ">=2.0.1",
        "@types/react": "19.2.13",
        "@types/react-dom": "19.2.3"
    }
}
