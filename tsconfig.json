{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "inlineSources": true,
        "sourceRoot": "/",
        "module": "commonjs",
        "lib": ["es2021", "dom", "dom.iterable"],
        "target": "es5",
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./types", "node_modules/@types"],
        "strict": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true,
        "baseUrl": ".",
        "paths": {
            "routes/*": ["src/routes/*"],
            "components/*": ["src/components/*"],
            "scenarios/*": ["src/scenarios/*"],
            "tiles/*": ["src/tiles/*"],
            "types/*": ["src/types/*"],
            "assets/*": ["src/assets/*"],
            "hooks/*": ["src/hooks/*"],
            "utils/*": ["src/utils/*"],
            "containers/*": ["src/containers/*"],
            "dashboards/*": ["src/dashboards/*"],
            "logic/*": ["src/logic/*"],
            "settings/*": ["src/settings/*"],
            "graphql-generated/*": ["graphql-generated/*"],
            "src/*": ["src/*"]
        }
    },
    "include": ["types", "./src/**/*", "graphql-generated"],
    "exclude": ["node_modules"]
}
